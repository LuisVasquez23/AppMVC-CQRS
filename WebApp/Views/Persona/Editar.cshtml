@model Domain.ViewModels.Persona.PersonaViewModel

@{
    ViewData["Title"] = "Persona";

    var persona = ViewBag.Persona;  
}

<h2>Editar persona</h2>
<form method="post" asp-action="Editar" asp-controller="Persona">

    <div class="form-group">
        <input type="hidden" asp-for="IdPersona" class="form-control" value="@persona.IdPersona" />
    </div>

    <div class="form-group mb-2">
        <label asp-for="Nombre"></label>
        <input asp-for="Nombre" class="form-control" value="@persona.Nombre" />
        <span asp-validation-for="Nombre" class="text-danger"></span>
    </div>

    <div class="form-group mb-2">
        <label asp-for="Apellido"></label>
        <input asp-for="Apellido" class="form-control" value="@persona.Apellido" />
        <span asp-validation-for="Apellido" class="text-danger"></span>
    </div>

    <div class="form-group mb-2">
        <label asp-for="Email"></label>
        <input type="email" asp-for="Email" class="form-control" value="@persona.Email" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="form-group mb-2">
        <label asp-for="FechaNacimiento"> Fecha de nacimiento</label>
        <input type="date" asp-for="FechaNacimiento" class="form-control" value="@persona.FechaNacimiento" />
        <span asp-validation-for="FechaNacimiento" class="text-danger"></span>
    </div>


    <button type="submit" class="btn btn-primary">Editar</button>

    <a class="btn btn-secondary" asp-action="Index" asp-controller="Persona">Regresar</a>
</form>